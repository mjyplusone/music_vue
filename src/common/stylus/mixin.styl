// tab icon 背景图片
icon-bg-image($url)
  background: url("../../common/image/" + $url + ".png") no-repeat
  background-size: auto 24px
  background-position: center

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px